pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'git@github.com:SaranyaSeethamraju07/Jenkins_Test.git', credentialsId: 'da823037-54ec-4764-b67c-bb9b1e1cb881'
            }
        }

       stage('Deploy to Kubernetes') {
            steps {
                script {
                    env.KUBECONFIG = "C:\Windows\System32\config\systemprofile\.minikube\config"
                    withCredentials([string(credentialsId: 'secrets', variable: 'SECRET_VALUE')]) {
                        bat """
                            cd C:\\Users\\saranya_seethamraju
                            powershell.exe minikube config set-context minikube
                            powershell.exe kubectl apply -f deployment.yaml --validate=false
                            powershell.exe kubectl apply -f service.yaml --validate=false
                        """
                    }
                }
            }
        }

        stage('Test') {
            steps {
                powershell 'kubectl get pods'
                powershell 'curl http://$(minikube service hello-app-service --url)'
            }
        }
    }
}
