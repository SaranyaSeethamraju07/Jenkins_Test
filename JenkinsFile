pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'git@github.com:SaranyaSeethamraju07/Jenkins_Test.git',
                credentialsId: '6d88753c-4273-499b-8ef7-12f60c97a860'
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                // Add your deployment steps here
                sh 'kubectl apply -f deployment.yaml'
                sh 'kubectl apply -f service.yaml'
            }
        }
        stage('Test') {
            steps {
                // Add your testing steps here
                sh 'kubectl get pods'
                sh 'curl http://$(minikube service hello-app-service --url)'
            }
        }
    }
}
